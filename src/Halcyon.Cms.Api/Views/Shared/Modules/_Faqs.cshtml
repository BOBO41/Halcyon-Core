@model TTS.Lib.ViewModels.FEModuleData
<div id="faqs" class="container" style="padding-bottom:50px;">
    <div class="clients-area center wow fadeInDown">
        <h2>@Model.Title</h2>
        <p class="lead">@Model.Description</p>
    </div>
    @if (Model != null && Model.Data != null)
    {
        <div class="blog">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in Model.Data.Items)
                    {

                        <div class="blog-content">
                            <h2>@item.GetStringValue("Question")</h2>
                            <h3>@item.GetStringValue("Answer")</h3>
                        </div>

                    }
                </div>
            </div>
        </div>
    }
</div>